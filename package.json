  },
  "homepage": "https://github.com/kreation-tech/nft-rewards#readme",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat deploy && hardhat run scripts/deploy.ts",
    "verify": "hardhat run scripts/verify.ts",
    "test": "hardhat test --network hardhat --deploy-fixture",
    "build": "hardhat compile && tsc",
    "postbuild": "npm-prepare-dist && ts-node scripts/postbuild.ts",
    "clean": "npx hardhat clean && rm -rf dist",
    "postversion": "git push && git push --tags",
    "publish": "cd dist && npm publish --access public"
  },
